<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Incluindo o SlidingTabLayout e o view Pager para criacao do Layout das TABS que sera implementado via codigo -->
    <com.era.licaodecasa.model.utilities.tabs.SlidingTabLayout
        android:id="@+id/stl_my_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.era.licaodecasa.model.utilities.tabs.SlidingTabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_my_tabs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>